{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@firefly-swarm/network-compiler": ["../network-compiler/src/index.ts"],
      "@firefly-swarm/core": ["../core/src/index.ts"],
      "@firefly-swarm/agents": ["../agents/src/index.ts"],
      "@firefly-swarm/shared": ["../shared/src/index.ts"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
