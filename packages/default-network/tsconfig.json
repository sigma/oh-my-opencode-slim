{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@firefly-swarm/network-compiler": ["../network-compiler/src/index.ts"],
      "@firefly-swarm/core": ["../core/src/index.ts"],
      "@firefly-swarm/agents": ["../agents/src/index.ts"],
      "@firefly-swarm/shared": ["../shared/src/index.ts"],
      "@firefly-swarm/hooks": ["../hooks/src/index.ts"],
      "@firefly-swarm/mcp-integrations": ["../mcp-integrations/src/index.ts"],
      "@firefly-swarm/multiplexer": ["../multiplexer/src/index.ts"],
      "@firefly-swarm/tool-ast-grep": ["../tool-ast-grep/src/index.ts"],
      "@firefly-swarm/tool-background": ["../tool-background/src/index.ts"],
      "@firefly-swarm/tool-grep": ["../tool-grep/src/index.ts"],
      "@firefly-swarm/tool-lsp": ["../tool-lsp/src/index.ts"],
      "@firefly-swarm/tool-quota": ["../tool-quota/src/index.ts"],
      "@firefly-swarm/tool-skills": ["../tool-skills/src/index.ts"]
    }
  },
  "include": ["*.ts", "../agents/roles/roles.d.ts"],
  "exclude": ["node_modules", "dist"]
}
