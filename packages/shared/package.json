{
  "name": "@firefly-swarm/shared",
  "version": "0.1.0",
  "description": "Shared types, utilities, and constants for OpenCode Swarm",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./agents": {
      "bun": "./src/agents.ts",
      "import": "./dist/agents.js",
      "types": "./dist/agents.d.ts"
    },
    "./constants": {
      "bun": "./src/constants.ts",
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./utils": {
      "bun": "./src/utils/index.ts",
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./schemas": {
      "bun": "./src/schemas/index.ts",
      "import": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.7.3"
  }
}
