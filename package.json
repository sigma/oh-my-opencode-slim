{
  "name": "oh-my-opencode-slim",
  "version": "0.5.3",
  "description": "Lightweight agent orchestration plugin for OpenCode - a slimmed-down fork of oh-my-opencode",
  "main": "packages/core/src/index.ts",
  "bin": "packages/installer/src/index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "keywords": [
    "opencode",
    "opencode-plugin",
    "ai",
    "agents",
    "orchestration",
    "llm",
    "claude",
    "gpt",
    "gemini"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alvinunreal/oh-my-opencode-slim"
  },
  "bugs": {
    "url": "https://github.com/alvinunreal/oh-my-opencode-slim/issues"
  },
  "homepage": "https://github.com/alvinunreal/oh-my-opencode-slim#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "typecheck": "bun run --filter '*' typecheck",
    "dev": "bun run --filter @firefly-swarm/core dev"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@opencode-ai/plugin": "^1.1.19",
    "@opencode-ai/sdk": "^1.1.19",
    "@firefly-swarm/agents": "workspace:*",
    "@firefly-swarm/core": "workspace:*",
    "@firefly-swarm/hooks": "workspace:*",
    "@firefly-swarm/installer": "workspace:*",
    "@firefly-swarm/mcp-integrations": "workspace:*",
    "@firefly-swarm/multiplexer": "workspace:*",
    "@firefly-swarm/network-compiler": "workspace:*",
    "@firefly-swarm/shared": "workspace:*",
    "@firefly-swarm/tool-ast-grep": "workspace:*",
    "@firefly-swarm/tool-background": "workspace:*",
    "@firefly-swarm/tool-grep": "workspace:*",
    "@firefly-swarm/tool-quota": "workspace:*",
    "@firefly-swarm/tool-skills": "workspace:*",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver-protocol": "^3.17.5",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.7.3"
  },
  "trustedDependencies": [
    "@ast-grep/cli"
  ]
}
